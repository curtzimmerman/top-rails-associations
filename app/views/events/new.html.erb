<% provide(:title, "New Event") %>
<h1>Create a new event</h1>

<%= form_for @event do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :start_time %>
	<%= f.datetime_select :start_time %>

	<%= f.submit "Create" %>
<% end %>