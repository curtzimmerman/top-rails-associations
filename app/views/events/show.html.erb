<% provide(:title, @event.name) %>

<h1><%= @event.name %></h1>
<h2><%= @event.start_time.to_formatted_s(:long) %></h2>
<h3><%= "Created by #{@event.host.name}" %></h3>
<h4>Attend this event: 

</h4>
<h3>Attendees:</h3>
<% @event.attendees.each do |attendee| %>
	<%= link_to attendee.name, user_path(attendee) %>
	<br>
<% end %>