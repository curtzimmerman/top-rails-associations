<%= form_for(@invitation) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :recipient_email %>
	<%= f.email_field :recipient_email %>

	<%= f.label :message %>
	<%= f.text_area :message %>

	<%= f.hidden_field :event_id, value: params[:id] %>

	<%= f.submit "Invite" %>
<% end %>